<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dummyButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2sp"
                    android:layout_weight="0"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/white" />

                <Button
                    android:id="@+id/dummyButton2"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2sp"
                    android:layout_weight="0"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c2" />

                <Button
                    android:id="@+id/dummyButton3"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2sp"
                    android:layout_weight="0"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c3" />

                <Button
                    android:id="@+id/dummyButton4"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2sp"
                    android:layout_weight="0"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c4" />

                <Button
                    android:id="@+id/dummyButton5"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2sp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c5" />

                <Button
                    android:id="@+id/dummyButton6"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2sp"
                    android:layout_weight="0"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c6" />

                <Button
                    android:id="@+id/dummyButton7"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2sp"
                    android:layout_weight="0"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c7" />

                <Button
                    android:id="@+id/dummyButton8"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2sp"
                    android:layout_weight="0"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c8" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_margin="1sp"
                            android:layout_weight="1"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/gray"
                            android:contentDescription="@string/lorem_ipsum" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_margin="1sp"
                            android:layout_weight="1"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/black"
                            android:contentDescription="@string/lorem_ipsum" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_margin="1sp"
                            android:layout_weight="1"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/gray"
                            android:contentDescription="@string/lorem_ipsum" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_margin="1sp"
                            android:layout_weight="1"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/black"
                            android:contentDescription="@string/lorem_ipsum" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_margin="1sp"
                            android:layout_weight="1"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/black"
                            android:contentDescription="@string/lorem_ipsum" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_margin="1sp"
                            android:layout_weight="1"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/gray"
                            android:contentDescription="@string/lorem_ipsum" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_margin="1sp"
                            android:layout_weight="1"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/black"
                            android:contentDescription="@string/lorem_ipsum" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_margin="1sp"
                            android:layout_weight="1"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/gray"
                            android:contentDescription="@string/lorem_ipsum" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCommitTurn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/zug_beenden" />

</LinearLayout>
