<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dummyButton"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:layout_margin="2sp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c1" />

                <Button
                    android:id="@+id/dummyButton2"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:layout_margin="2sp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c2" />

                <Button
                    android:id="@+id/dummyButton3"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:layout_margin="2sp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c3" />

                <Button
                    android:id="@+id/dummyButton4"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:layout_margin="2sp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c4" />

                <Button
                    android:id="@+id/dummyButton5"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:layout_margin="2sp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c5" />

                <Button
                    android:id="@+id/dummyButton6"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:layout_margin="2sp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c6" />

                <Button
                    android:id="@+id/dummyButton7"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:layout_margin="2sp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c7" />

                <Button
                    android:id="@+id/dummyButton8"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:layout_margin="2sp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/c8" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="18sp"
                            android:layout_height="18sp"
                            android:layout_margin="1sp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/gray"
                            android:contentDescription="@string/lorem_ipsum" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="18sp"
                            android:layout_height="18sp"
                            android:layout_margin="1sp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/black"
                            android:contentDescription="@string/lorem_ipsum" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="18sp"
                            android:layout_height="18sp"
                            android:layout_margin="1sp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/gray"
                            android:contentDescription="@string/lorem_ipsum" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView42"
                            android:layout_width="18sp"
                            android:layout_height="18sp"
                            android:layout_margin="1sp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/black"
                            android:contentDescription="@string/lorem_ipsum" />

                        <ImageView
                            android:id="@+id/imageView52"
                            android:layout_width="18sp"
                            android:layout_height="18sp"
                            android:layout_margin="1sp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/gray"
                            android:contentDescription="@string/lorem_ipsum" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="18sp"
                            android:layout_height="18sp"
                            android:layout_margin="1sp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/black"
                            android:contentDescription="@string/lorem_ipsum" />

                    </TableRow>

                </TableLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
